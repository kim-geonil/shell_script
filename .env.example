# Environment Variables Template
# Copy this file to .env.development, .env.staging, or .env.production and fill in the values

# Application Information
VITE_APP_NAME=NcuScript Automator
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_URL=your_api_url_here
VITE_API_TIMEOUT=10000

# Authentication
VITE_JWT_SECRET=your_jwt_secret_here
VITE_JWT_EXPIRES_IN=7d
VITE_REFRESH_TOKEN_EXPIRES_IN=30d

# Features
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_REDUX_DEVTOOLS=true

# External Services
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_ANALYTICS_ID=your_analytics_id_here

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.sh,.bash,.bats,.txt

# Security Compliance Templates
VITE_ENABLE_U102_TEMPLATE=true
VITE_ENABLE_U103_TEMPLATE=true
VITE_ENABLE_U106_TEMPLATE=true
VITE_ENABLE_U107_TEMPLATE=true
VITE_ENABLE_U301_TEMPLATE=true

# Monaco Editor Configuration
VITE_MONACO_CDN_URL=https://cdn.jsdelivr.net/npm/monaco-editor@0.45.0